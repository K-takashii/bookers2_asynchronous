<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editings Book</h1>
      <%= render 'layouts/errors', obj: @book %>
      <%= render 'form', book: @book %>
      <%= link_to 'Show', book_path(@book), class: "book_#{@book.id}" %> |
      <%= link_to 'Back', books_path, class: "back" %>
    </div>
  </div>
</div>